<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="@dimen/common_12dp"
    android:background="#191926">

    <TextView
        android:id="@+id/positionBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/common_4dp"
        android:layout_marginTop="@dimen/common_56dp"
        android:drawableLeft="@drawable/ic_combined_shape"
        android:drawablePadding="@dimen/common_8dp"
        android:text="Warszawa, Poland"
        android:textColor="@color/commonColorWhite"
        android:textSize="@dimen/common_14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/guidelineStart"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/movieItem"
        android:layout_width="170dp"
        android:layout_height="296dp"
        android:layout_marginTop="27dp"
        app:cardCornerRadius="@dimen/common_8dp"
        android:background="@drawable/background_card"
        app:layout_constraintStart_toStartOf="@id/guidelineStart"
        app:layout_constraintTop_toBottomOf="@id/positionBtn">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/background"
                android:layout_width="match_parent"
                android:layout_height="248dp"
                android:layout_margin="@dimen/common_2dp"
                android:src="@drawable/background_gradient_mask"
                android:background="@drawable/background_movie"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <ImageView
                android:id="@+id/like"
                android:layout_width="@dimen/common_16dp"
                android:layout_height="@dimen/common_14dp"
                android:layout_marginTop="@dimen/common_13dp"
                android:layout_marginEnd="@dimen/common_6dp"
                android:background="@drawable/ic_like"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/age"
                android:layout_width="@dimen/common_24dp"
                android:layout_height="@dimen/common_24dp"
                android:layout_marginTop="@dimen/common_8dp"
                android:layout_marginStart="@dimen/common_6dp"
                android:text="13+"
                android:textSize="@dimen/common_12sp"
                android:textColor="@color/commonColorWhite"
                android:fontFamily="@font/roboto"
                android:gravity="center"
                android:background="@drawable/background_corner"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/tag"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/common_22dp"
                android:layout_marginStart="@dimen/common_8dp"
                android:layout_marginEnd="@dimen/common_14dp"
                android:text="Action, Adventure, Drama"
                android:textColor="@color/color_tag"
                android:textSize="@dimen/common_8sp"
                app:layout_constraintBottom_toBottomOf="@id/background"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <ImageView
                android:id="@+id/star1"
                android:layout_width="@dimen/common_8dp"
                android:layout_height="@dimen/common_8dp"
                android:layout_marginTop="@dimen/common_4dp"
                android:layout_marginStart="@dimen/common_8dp"
                android:layout_marginBottom="@dimen/common_10dp"
                android:src="@drawable/ic_star_icon"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tag" />

            <ImageView
                android:id="@+id/star2"
                android:layout_width="@dimen/common_8dp"
                android:layout_height="@dimen/common_8dp"
                android:layout_marginStart="@dimen/common_2dp"
                android:src="@drawable/ic_star_icon"
                app:layout_constraintStart_toEndOf="@id/star1"
                app:layout_constraintTop_toTopOf="@id/star1" />

            <ImageView
                android:id="@+id/star3"
                android:layout_width="@dimen/common_8dp"
                android:layout_height="@dimen/common_8dp"
                android:layout_marginStart="@dimen/common_2dp"
                android:src="@drawable/ic_star_icon"
                app:layout_constraintStart_toEndOf="@id/star2"
                app:layout_constraintTop_toTopOf="@id/star2" />

            <ImageView
                android:id="@+id/star4"
                android:layout_width="@dimen/common_8dp"
                android:layout_height="@dimen/common_8dp"
                android:layout_marginStart="@dimen/common_2dp"
                android:src="@drawable/ic_star_icon"
                app:layout_constraintStart_toEndOf="@id/star3"
                app:layout_constraintTop_toTopOf="@id/star3" />

            <ImageView
                android:id="@+id/star5"
                android:layout_width="@dimen/common_8dp"
                android:layout_height="@dimen/common_8dp"
                android:layout_marginStart="@dimen/common_2dp"
                android:src="@drawable/ic_star_grey"
                app:layout_constraintStart_toEndOf="@id/star4"
                app:layout_constraintTop_toTopOf="@id/star4" />

            <TextView
                android:id="@+id/counter"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/common_6dp"
                android:layout_marginTop="@dimen/common_2dp"
                android:text="125 reviews"
                android:textColor="@color/commonColorBack"
                android:textSize="@dimen/common_8sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/tag"
                app:layout_constraintStart_toEndOf="@id/star5" />


            <TextView
                android:id="@+id/nameMovie"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_8dp"
                android:layout_marginLeft="@dimen/common_8dp"
                android:layout_marginEnd="@dimen/common_8dp"
                android:textColor="@color/commonColorWhite"
                android:fontFamily="@font/roboto"
                android:text="Avengers: End Game"
                android:textSize="@dimen/common_14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/background" />

            <TextView
                android:id="@+id/timing"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/common_8dp"
                android:layout_marginEnd="@dimen/common_8dp"
                android:layout_marginBottom="@dimen/common_8dp"
                android:textColor="@color/color_time"
                android:fontFamily="@font/roboto"
                android:text="137 MIN"
                android:textSize="@dimen/common_8sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/nameMovie" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="-130dp" />

</androidx.constraintlayout.widget.ConstraintLayout>